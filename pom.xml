    <better-cli.version>0.0.1-SNAPSHOT</better-cli.version>
    <better-jsonrpc.version>0.0.1-SNAPSHOT</better-jsonrpc.version>

    <!-- Android-specific dependencies -->
    <android.platform.version>4.4.2_r2</android.platform.version>
    <android.supportv4.version>19.0.1</android.supportv4.version>
