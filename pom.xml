  <artifactId>hoccer-talk</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Hoccer Talk</name>

  <packaging>pom</packaging>

  <modules>
    <module>cli-api</module>
    <module>cli-log4j</module>
    <module>jsonrpc-annotations</module>
    <module>jsonrpc-common</module>
